<?xml version="1.0"?>
<form secure="false">
    <field 
        formid="fname"
        label="label.input.firstname.profile"
        mandatory="true"
        max-length="50"
        missing-error="error.message.required" 
        type="string" />

    <field
        formid="lname"
        label="label.input.lastname.profile"
        mandatory="true"
        max-length="50"
        missing-error="error.message.required" 
        type="string" />

    <field
        formid="email"
        label="label.input.email.profile"
        mandatory="true"
        max-length="50"
        missing-error="error.message.required" 
        regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
        type="string" />
        
    <field
        formid="agreement"
        label="label.input.ckeckbox.agreement"
        mandatory="true"
        missing-error="error.message.checkbox.required" 
        type="boolean"/>
</form>